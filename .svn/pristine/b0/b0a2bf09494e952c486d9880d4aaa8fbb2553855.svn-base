<script>
  import echarts from 'echarts';
  import utils from '@/utils';
  export default {
    name: 'tempList',
    beforeDestroy() {
      if (this.ltChart) {
        this.ltChart.dispose();
        this.ltChart = null;
      }

      if (this.rtChart) {
        this.rtChart.dispose();
        this.rtChart = null;
      }
    },
    props: {
      page: {
        type: String
      },
      chartLtId: {
        type: String,
        default: utils.guid()
      },
      chartRtId: {
        type: String,
        default: utils.guid()
      }
    },
    data() {
      return {
        headerStyle: {
          backgroundColor: '#409EFF',
          color: '#FFF'
        },
        grid: [
          {
            target: '1#拌合楼1号',
            time: '2018-7-9 16:27',
            temp: '14℃',
            max: '18℃',
            min: '12℃'
          },
          {
            target: '1#拌合楼1号',
            time: '2018-7-9 16:27',
            temp: '14℃',
            max: '18℃',
            min: '12℃'
          },
          {
            target: '1#拌合楼1号',
            time: '2018-7-9 16:27',
            temp: '14℃',
            max: '18℃',
            min: '12℃'
          },
          {
            target: '1#拌合楼1号',
            time: '2018-7-9 16:27',
            temp: '14℃',
            max: '18℃',
            min: '12℃'
          },
          {
            target: '1#拌合楼1号',
            time: '2018-7-9 16:27',
            temp: '14℃',
            max: '18℃',
            min: '12℃'
          }
        ],
        search: {
          build: '',
          period: '',
          pos: '',
          startTime: '',
          endTime: '',
          project: ''
        },
        projectDataSet: [
          {
            text: '单元工程',
            value: ''
          },
          {
            text: '单元工程1',
            value: '单元工程1'
          },
          {
            text: '单元工程2',
            value: '单元工程2'
          },
          {
            text: '单元工程3',
            value: '单元工程3'
          }
        ],
        posDataSet: [
          {
            text: '部位',
            value: ''
          },
          {
            text: '部位1',
            value: '部位1'
          },
          {
            text: '部位2',
            value: '部位2'
          },
          {
            text: '部位3',
            value: '部位3'
          }
        ],
        periodDataSet: [
          {
            text: '标段',
            value: ''
          },
          {
            text: '1#标段',
            value: '1#标段'
          },
          {
            text: '2#标段',
            value: '2#标段'
          },
          {
            text: '3#标段',
            value: '3#标段'
          }
        ],
        buildDataSet: [
          {
            text: '拌合楼',
            value: ''
          },
          {
            text: '1#拌合楼',
            value: '1#拌合楼'
          },
          {
            text: '2#拌合楼',
            value: '2#拌合楼'
          },
          {
            text: '3#拌合楼',
            value: '3#拌合楼'
          }
        ]
      };
    },
    watch: {
      page: function(newValue, oldValue) {
        if (newValue === 'tempList') {
          if (this.ltChart) {
            this.ltChart.dispose();
          }

          if (this.rtChart) {
            this.rtChart.dispose();
          }

          this.ltChart = echarts.init(document.getElementById(this.chartLtId));
          this.rtChart = echarts.init(document.getElementById(this.chartRtId));

          this.ltChart.setOption(this.getOptions(
            `XX仓出机口温度曲线`,
            `当前供料仓面：1#进水塔EL2504M  最高温度：19℃  最低温度：8摄氏度`
          ));

          this.rtChart.setOption(this.getOptions(
            `XX拌合楼出机口温度曲线`,
            `当前拌合楼：1#  最高温度：21℃  最低温度：8摄氏度`
          ));
        }
      }
    },
    methods: {
      getOptions(title = 'XX仓出机口温度曲线', subtitle = '副标题') {
        const dataSet = [];
        const now = Date.now();
  
        for (let i = 0; i < 200; i++) {
          dataSet.push({
            text: utils.parseTime(new Date(now - 60 * 1000 * i), '{m}-{d} {h}:{i}'),
            value: Math.ceil(Math.random() * 8) + 13
          });
        }

        return {
          title: {
            left: 'center',
            subtext: subtitle,
            text: title
          },
          tooltip: {
              trigger: 'axis'
          },
          grid: {
            left: 50
          },
          xAxis: {
            name: '时间：分',
            data: dataSet.map(item => item.text)
          },
          yAxis: {
              name: '温度：℃',
              max: 25,
              min: 5,
              splitLine: {
                  show: false
              }
          },
          dataZoom: [{
              startValue: dataSet[dataSet.length - 10].text
          }, {
              type: 'inside'
          }],
          visualMap: {
              show: false,
              pieces: [
                {
                  gt: 0,
                  lte: 12,
                  color: '#F56C6C'
                },
                {
                  gt: 12,
                  lte: 18,
                  color: '#67C23A'
                },
                {
                  gt: 18,
                  color: '#F56C6C'
                }
              ]
          },
          series: {
              name: '温度',
              type: 'line',
              data: dataSet.map(item => item.value),
              markLine: {
                  silent: true,
                  data: [{
                      yAxis: 18
                  }, {
                      yAxis: 12
                  }]
              }
          }
        };
      }
    }
  };
</script>

